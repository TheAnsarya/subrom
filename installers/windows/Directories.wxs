<?xml version="1.0" encoding="UTF-8"?>
<!--
	Directory structure for Subrom installation
-->
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
	<Fragment>
		<StandardDirectory Id="ProgramFiles64Folder">
			<Directory Id="INSTALLFOLDER" Name="Subrom">
				<Directory Id="ServerFolder" Name="Server" />
				<Directory Id="TrayFolder" Name="Tray" />
				<Directory Id="ServiceFolder" Name="Service" />
			</Directory>
		</StandardDirectory>

		<StandardDirectory Id="ProgramMenuFolder">
			<Directory Id="SubromProgramMenu" Name="Subrom" />
		</StandardDirectory>

		<StandardDirectory Id="DesktopFolder" />

		<StandardDirectory Id="CommonAppDataFolder">
			<Directory Id="SubromDataFolder" Name="Subrom">
				<Directory Id="DatabaseFolder" Name="Database" />
				<Directory Id="LogsFolder" Name="Logs" />
				<Directory Id="ConfigFolder" Name="Config" />
			</Directory>
		</StandardDirectory>
	</Fragment>
</Wix>
